<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3375CEDA"
    tools:context=".presentation.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="serif"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="20dp"
            android:text="@string/chefsnotes"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000"
            android:textSize="80sp"
            android:textStyle="italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="210dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/logo"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/logo" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/CreateRecipeButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#071355"
                    android:gravity="center"
                    android:onClick="makeRecipe"
                    android:padding="5dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:text="@string/create_recipe"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/ViewRecipeButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_toEndOf="@+id/CreateRecipeButton"
                    android:backgroundTint="#071355"
                    android:gravity="center|center_horizontal"
                    android:onClick="viewRecipe"
                    android:padding="5dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:text="@string/view_recipe"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
