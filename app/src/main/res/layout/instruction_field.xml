<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DirectionField"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/recipe_editor">

    <RelativeLayout
        android:id="@+id/Direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/DirectionDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TimeEstimateLabel"
            android:layout_marginStart="83dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/Directions"
            app:srcCompat="@android:drawable/ic_delete"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/DirectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:hint="Direction Title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Directions"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:translationY="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/TimeEstimate"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="217dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/DirectionName"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:translationX="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/TimeEstimateLabel"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TimeEstimate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="55dp"
            android:text="Time For Step"
            android:textAlignment="center" />

        <Space
            android:id="@+id/AddDirectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Directions"
            android:layout_marginTop="50dp"
            android:onClick="addInstruction"
            android:translationX="25dp"
            android:translationY="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

</TableRow>
